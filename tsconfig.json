{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "module": "ES6",
    "outDir": "./dist/",
    "allowJs": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "Node",
    "preserveWatchOutput": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}